                @Html.DisplayFor(modelItem => item.TotalOutcome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxDaysWithoutProduct)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AverageSalesPerDay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MinSalePerDay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FinalNumber)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
