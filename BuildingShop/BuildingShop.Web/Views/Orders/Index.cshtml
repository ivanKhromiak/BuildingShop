                @Html.DisplayNameFor(model => model.TotalOutcome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxDaysWithoutProduct)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AverageSalesPerDay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MinSalePerDay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FinalNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StarDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartingAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalIncome)
            </td>
